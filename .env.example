
# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://your-mqtt-broker.com:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=ecosmart_garden_hub

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecosmart_garden
DB_USER=postgres
DB_PASSWORD=your_db_password

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# API Keys (if needed)
WEATHER_API_KEY=your_weather_api_key
EMAIL_SERVICE_KEY=your_email_service_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# MQTT Topics
MQTT_TOPIC_SENSOR_DATA=agri/irrigation/data
MQTT_TOPIC_CAR_CONTROL=agri/car/control
MQTT_TOPIC_SYSTEM_STATUS=agri/system/status

# Thresholds
DEFAULT_IRRIGATION_THRESHOLD=35
DEFAULT_PH_MIN=6.0
DEFAULT_PH_MAX=7.5
DEFAULT_TEMP_MIN=20
DEFAULT_TEMP_MAX=28

# Features
ENABLE_AUTO_IRRIGATION=true
ENABLE_SMART_CAR=true
ENABLE_WEATHER_INTEGRATION=false
ENABLE_EMAIL_ALERTS=true
